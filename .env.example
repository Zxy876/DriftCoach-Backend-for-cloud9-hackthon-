# ===========================
# DriftCoach Backend Environment Variables
# ===========================
# Copy this file to .env and fill in your actual values

# Data Source (required)
# Options: "mock" or "grid"
DATA_SOURCE=grid

# GRID API Configuration (required if DATA_SOURCE=grid)
GRID_API_KEY=your_grid_api_key_here
GRID_SERIES_ID=2819676
GRID_PLAYER_ID=91

# Optional: GRID defaults
GRID_TEAM_NAME=GRID-Team
GRID_PLAYER_NAME=GRID-Player

# OpenAI API Key (optional, for LLM features)
OPENAI_API_KEY=your_openai_api_key_here

# CORS Settings (optional, Railway will use *)
# CORS_ALLOW_ORIGINS=*
